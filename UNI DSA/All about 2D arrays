// Static Declaration
#include<iostream>
using namespace std;
int main(){
    int arr[2][3]={
        {1,2,3},
        {4,5,6}
    };
    
    for(int i=0; i<2; i++){
        for(int j=0; j<3; j++){
            cout<<arr[i][j]<<" ";
        }
        cout<<endl;
    }
}

//Dynamic memory allocation
#include <iostream>
using namespace std;

int main() {
    int rows = 3;
    int cols = 4;

    // Declare a pointer to a pointer
    int** arr = new int*[rows];

    // Allocate memory for each row
    for (int i = 0; i < rows; i++) {
        arr[i] = new int[cols];
    }

    // Initialize the array
    int counter = 1;
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols; j++) {
            arr[i][j] = counter++;
        }
    }

    // Accessing elements of the dynamically allocated 2D array
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols; j++) {
            cout << arr[i][j] << " ";
        }
        cout << endl;
    }

    // Deallocate memory
    for (int i = 0; i < rows; i++) {
        delete[] arr[i];
    }
    delete[] arr;

    return 0;
}


